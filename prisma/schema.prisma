// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

// 定义 Todo 表结构
model Todo {
  // 相当于 @Id @GeneratedValue
  id          String   @id @default(uuid())
  
  // 相当于 String title;
  title       String
  
  // 相当于 String description; (问号表示可为空，Nullable)
  description String?
  
  // 相当于 boolean isCompleted = false;
  isCompleted Boolean  @default(false)

  // 优先级 (1:低, 2:中, 3:高)。默认是 1 (普通任务)
  priority    Int      @default(1)
  
  // 相当于 @CreatedDate
  createdAt   DateTime @default(now())
  
  // 相当于 @LastModifiedDate
  updatedAt   DateTime @updatedAt
}